  <profiles>
    <profile>
      <id>itest</id>
      <build>
        <plugins>
          <!-- Make sure Surefire does NOT run -->
          <plugin>
            <artifactId>maven-surefire-plugin</artifactId>
            <configuration>
              <excludes>
                <exclude>**/*.java</exclude>
              </excludes>
            </configuration>
          </plugin>
          <!-- Spawn a Nuxeo in server mode -->
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <id>start-nuxeo-server</id>
                <phase>pre-integration-test</phase>
                <configuration>
                  <tasks>
                    <echo message="Starting Nuxeo Server" />
                    <!-- Set server log4j.properties -->
                    <move overwrite="true"
                      file="${project.build.testOutputDirectory}/log4j.properties"
                      tofile="${project.build.testOutputDirectory}/log4j.properties.bak" />
                    <copy
                      file="${project.build.testOutputDirectory}/server.log4j.properties"
                      tofile="${project.build.testOutputDirectory}/log4j.properties" />
                    <java classname="org.nuxeo.ecm.core.storage.sql.NuxeoServerRunner"
                      classpathref="maven.test.classpath" fork="true" spawn="true">
                      <arg value="-p" />
                      <arg value="${server.shutdown.port}" />
                      <jvmarg value="-Xdebug" />
                      <jvmarg
                        value="-Xrunjdwp:transport=dt_socket,address=8788,server=y,suspend=n" />
                    </java>
                    <!-- Wait for log4j init -->
                    <sleep seconds="1" />
                    <!-- Restore normal log4j.properties for the integration tests -->
                    <move overwrite="true"
                      file="${project.build.testOutputDirectory}/log4j.properties.bak"
                      tofile="${project.build.testOutputDirectory}/log4j.properties" />
                    <!-- Wait for server to start -->
                    <waitfor maxwait="30" maxwaitunit="second">
                      <socket server="localhost" port="8181" />
                    </waitfor>
                  </tasks>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <!-- Run integration tests -->
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-failsafe-plugin</artifactId>
            <executions>
              <execution>
                <goals>
                  <goal>integration-test</goal>
                  <goal>verify</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <!-- Stop server -->
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <id>stop-nuxeo-server</id>
                <phase>post-integration-test</phase>
                <configuration>
                  <tasks>
                    <echo message="Stopping Nuxeo Server" />
                    <java
                      classname="org.nuxeo.ecm.core.storage.sql.NuxeoServerRunner$Stopper"
                      classpathref="maven.test.classpath">
                      <arg value="-p" />
                      <arg value="${server.shutdown.port}" />
                    </java>
                  </tasks>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
