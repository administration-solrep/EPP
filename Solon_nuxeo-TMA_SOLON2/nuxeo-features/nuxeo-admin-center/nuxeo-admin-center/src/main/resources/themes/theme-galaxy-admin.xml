<?xml version="1.0" encoding="UTF-8"?>
<theme name="admin" template-engines="jsf-facelets">
  <layout>
    <page name="default">
      <section>
        <cell>
          <!-- logo -->
          <fragment type="generic fragment"/>
        </cell>
        <cell>
          <!-- user services -->
          <fragment type="generic fragment"/>
        </cell>
        <cell>
          <!-- Include -->
          <fragment type="generic fragment"/>
        </cell>
      </section>
      <section>
        <cell>
          <!-- main area -->
          <fragment type="region fragment"/>
        </cell>
      </section>
      <section>
        <cell>
          <!-- footer -->
          <fragment type="generic fragment"/>
        </cell>
      </section>
    </page>
  </layout>
  <properties element="page[1]/section[2]/cell[1]/fragment[1]">
    <name>body</name>
    <defaultBody/>
    <defaultSrc/>
  </properties>
  <formats>
    <layout element="page[1]">
      <margin>0</margin>
      <padding>0</padding>
    </layout>
    <layout element="page[1]/section[1]">
      <height>36px</height>
      <width>100%</width>
      <overflow>auto</overflow>
    </layout>
    <layout element="page[1]/section[1]/cell[1]">
      <width>18%</width>
      <text-align>center</text-align>
    </layout>
    <layout element="page[1]/section[1]/cell[2]">
      <width>82%</width>
      <padding>0px 10px 0px 0px</padding>
    </layout>
    <layout element="page[1]/section[1]/cell[3]">
      <width>0%</width>
    </layout>
    <layout element="page[1]/section[2]">
      <height>100%</height>
      <width>100%</width>
    </layout>
    <layout element="page[1]/section[2]/cell[1]">
      <width>100%</width>
      <padding>0</padding>
    </layout>
    <layout element="page[1]/section[3]">
      <width>100%</width>
    </layout>
    <layout element="page[1]/section[3]/cell[1]">
      <width>100%</width>
      <text-align>right</text-align>
    </layout>
