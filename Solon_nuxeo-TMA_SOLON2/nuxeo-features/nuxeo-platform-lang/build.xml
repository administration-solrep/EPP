        <include name="**/src/main/resources/**/messages.properties" />
        <exclude name="**/target/**" />
        <exclude name="**/bin**" />
        <exclude
          name="nuxeo-platform-lang/src/main/resources/nuxeo.war/WEB-INF/classes/messages.properties" />
      </fileset>

      <fileset dir="${nuxeo.addons}" casesensitive="yes">
