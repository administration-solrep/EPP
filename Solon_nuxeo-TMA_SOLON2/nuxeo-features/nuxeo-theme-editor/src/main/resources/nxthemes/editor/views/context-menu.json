    {"id": "context menu",
     "area": "nxthemesCanvasArea",
     "widget": {
       "type": "contextmenu",
       "noIcon": "/skin/nxthemes-editor/img/noicon-16.png",
       "arrow":  "/skin/nxthemes-editor/img/arrow-16.png",
       "showDisabledItems": false,
       "targetType": "element",
       "items": [
         {"type": "title"
         },
         {"type": "item",
          "label": "Edit",
          "icon": "/skin/nxthemes-editor/img/edit-16.png",
          "action": "edit element",
          "visible": "editable"
         },
         {"type": "submenu",
          "label": "Change view",
          "visible": "has widget",
          "icon": "/skin/nxthemes-editor/img/set-widget-16.png",
          "items": [
            {"type": "selection",
             "action": "set element widget",
             "choices": "widgets"
            }
          ]
         },
         {"type": "item",
          "label": "Style",
          "icon": "/skin/nxthemes-editor/img/style-16.png",
          "action": "change element style",
          "visible": "has style"
         },
         {"type": "separator"
         },
         {"type": "item",
          "label": "Add fragment",
          "icon": "/skin/nxthemes-editor/img/add-fragment-16.png",
          "action": "insert fragment",
          "visible": "can add fragment"
         },
         {"type": "separator"
         },
         {"type": "item",
          "label": "Duplicate",
          "icon": "/skin/nxthemes-editor/img/duplicate-16.png",
          "action": "duplicate element",
          "visible": "duplicable"
         },
         {"type": "submenu",
          "label": "Align",
          "icon": "/skin/nxthemes-editor/img/align-16.png",
          "visible": "alignable",
          "items": [
            {"type": "selection",
             "action": "align element",
             "choices": "alignments"
            }
          ]
         },
         {"type": "item",
          "label": "Padding",
          "icon": "/skin/nxthemes-editor/img/padding-16.png",
          "action": "set element padding",
          "visible": "has padding"
         },
         {"type": "item",
          "label": "Split",
          "icon": "/skin/nxthemes-editor/img/split-16.png",
          "action": "split element",
          "visible": "splittable"
         },
         {"type": "item",
          "label": "Copy",
          "icon": "/skin/nxthemes-editor/img/copy-16.png",
          "action": "copy element",
          "visible": "copyable"
         },
         {"type": "item",
          "label": "Paste",
          "icon": "/skin/nxthemes-editor/img/paste-16.png",
          "action": "paste element",
          "visible": "pastable"
         },
         {"type": "separator"
         },
         {"type": "item",
          "label": "Delete",
          "icon": "/skin/nxthemes-editor/img/delete-16.png",
          "action": "delete element",
          "confirm": "Deleting, are you sure?",
          "visible": "deletable"
         }
       ]
     },
     "controllers": ["toggle context menu", "context menu actions"]
    }
