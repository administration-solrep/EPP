    {"id": "preset menu",
     "area": "nxthemesPresetManager",
     "widget": {
       "type": "contextmenu",
       "noIcon": "/skin/nxthemes-editor/img/noicon-16.png",
       "arrow":  "/skin/nxthemes-editor/img/arrow-16.png",
       "showDisabledItems": false,
       "targetType": "preset",
       "items": [
         {"type": "title"
         },
         {"type": "item",
          "label": "Edit",
          "icon": "/skin/nxthemes-editor/img/edit-16.png",
          "action": "edit preset",
          "visible": "editable"
         },
         {"type": "submenu",
          "label": "Set category",
          "icon": "/skin/nxthemes-editor/img/category-16.png",
          "visible": "editable",
          "items": [
            {"type": "selection",
             "action": "set preset category",
             "choices": "categories"
            }
          ]
         },
         {"type": "item",
          "label": "Rename",
          "icon": "/skin/nxthemes-editor/img/rename-16.png",
          "action": "rename preset",
          "visible": "editable"
         },
         {"type": "item",
          "label": "Copy",
          "icon": "/skin/nxthemes-editor/img/copy-16.png",
          "action": "copy preset",
          "visible": "copyable"
         },
         {"type": "item",
          "label": "Paste",
          "icon": "/skin/nxthemes-editor/img/paste-16.png",
          "action": "paste preset",
          "visible": "pastable"
         },
         {"type": "item",
          "label": "Delete",
          "icon": "/skin/nxthemes-editor/img/delete-16.png",
          "action": "delete preset",
          "confirm": "Deleting, are you sure?",
          "visible": "deletable"
         }
       ]
     },
     "controllers": ["toggle context menu", "context menu actions"]
    }
