<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
        http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
  version="1.0">

  <persistence-unit name="nxplaceful">
    <jta-data-source>java:/placeful_service_ds</jta-data-source>
    <class>org.nuxeo.ecm.platform.ec.notification.UserSubscription</class>
    <class>org.nuxeo.ecm.webapp.theme.negotiation.LocalThemeConfig</class>
    <properties>
      <property name="hibernate.hbm2ddl.auto" value="update" />
    </properties>
  </persistence-unit>

</persistence>
