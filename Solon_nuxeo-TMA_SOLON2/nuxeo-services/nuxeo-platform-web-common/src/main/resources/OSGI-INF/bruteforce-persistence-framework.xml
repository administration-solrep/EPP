<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.ui.web.auth.service.BruteforcePersistenceComponent">
	<require>org.nuxeo.ecm.core.persistence.PersistenceComponent</require>

	<extension target="org.nuxeo.ecm.core.persistence.PersistenceComponent" point="hibernate">
		<hibernateConfiguration name="bruteforce-infos">
			<datasource>bruteforce-infos</datasource>
			<properties>
				<property name="hibernate.hbm2ddl.auto">update</property>
			</properties>
		</hibernateConfiguration>
	</extension>
</component>