<?xml version="1.0"?>

<component name="org.nuxeo.theme.core.tests.themesets">

  <extension target="org.nuxeo.theme.services.ThemeService"
    point="themesets">

    <themeset name="galaxy">
      <theme name="galaxy-default" features="default" />
    </themeset>

    <!-- register new themes -->
    <themeset name="galaxy">
      <theme name="galaxy-blogs" features="blogs" />
      <theme name="galaxy-dm" features="dm" />
      <theme name="galaxy-sites" features="sites" />
    </themeset>

    <!-- add features to registered theme -->
    <themeset name="galaxy">
      <theme name="galaxy-default" features="dashboard,search" />
    </themeset>

    <!-- register new theme for existing feature -->
    <themeset name="galaxy">
      <theme name="galaxy-search" features="search" />
    </themeset>

  </extension>

</component>
