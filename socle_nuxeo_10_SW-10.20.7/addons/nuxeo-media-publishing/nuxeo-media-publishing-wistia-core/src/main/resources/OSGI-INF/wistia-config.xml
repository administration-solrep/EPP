<?xml version="1.0"?>
<component name="org.nuxeo.ecm.media.publishing.youtube.WistiaOAuth2Provider">

  <require>org.nuxeo.ecm.platform.oauth2.providers.OAuth2ServiceProviderRegistry</require>

  <documentation>
    Management of Wistia configuration.
  </documentation>

  <extension target="org.nuxeo.ecm.platform.oauth2.providers.OAuth2ServiceProviderRegistry" point="providers">
    <provider>
      <name>Wistia</name>
      <description>Wistia</description>
      <class>org.nuxeo.ecm.media.publishing.wistia.WistiaOAuth2ServiceProvider</class>
      <tokenServerURL>https://api.wistia.com/oauth/token</tokenServerURL>
      <authorizationServerURL>https://app.wistia.com/oauth/authorize</authorizationServerURL>
    </provider>
  </extension>

</component>