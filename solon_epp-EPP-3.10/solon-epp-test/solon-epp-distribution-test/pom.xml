<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>fr.sword.idl.naiad.tools</groupId>
		<artifactId>naiad-auto-exec-pom</artifactId>
		<version>1.8.0</version>
	</parent>

	<groupId>fr.dila.solonepp</groupId>
	<artifactId>solon-epp-distribution-test</artifactId>
	<version>EPP-3.10.2</version>
	<packaging>jar</packaging>

	<name>solon-epp-distribution-test</name>
	<description>Solon EPP : test d'integrations</description>

	<properties>
		<naiad.setup.base.archive.version>1.8.0</naiad.setup.base.archive.version>
	</properties>

	<dependencies>

		<dependency>
			<groupId>fr.dila.solonepp</groupId>
			<artifactId>solon-epp-ws-test</artifactId>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>fr.dila.solonepp</groupId>
			<artifactId>solon-epp-web-test</artifactId>
			<version>${project.version}</version>
		</dependency>

	</dependencies>

	<profiles>
		<profile>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<id>qa</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<version>1.6</version>
						<dependencies>
							<dependency>
								<groupId>ant</groupId>
								<artifactId>ant-jsch</artifactId>
								<version>1.6.5</version>
							</dependency>
							<dependency>
								<groupId>com.jcraft</groupId>
								<artifactId>jsch</artifactId>
								<version>0.1.29</version>
							</dependency>
						</dependencies>
						<executions>
							<execution>
								<phase>install</phase>
								<configuration>
									<target>
										<property name="deploy.server.username" value="root" />
										<property name="deploy.server.password" value="Admin123" />
										<property name="deploy.server.hostname" value="idlv-solrep-epp-qa.lyon-dev2.local" />
										<property name="deploy.server.dir" value="/opt/deploy/" />
										<property name="deploy.source.directory" value="${project.build.directory}" />
										<property name="deploy.archive"
											value="${project.artifactId}-${project.version}.run" />
										<property name="deploy.server.actioncommand"
											value="bash ${deploy.server.dir}${deploy.archive} run test http://localhost:8080/" />
										<property name="deploy.result.archive"
											value="/tmp/solonepp-test-${project.version}/all-results/all-results.zip" />
										<ant antfile="${naiad.auto.exec.path}/ant/deploy-run.xml"
											target="deploy-and-run" />
									</target>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>

	</profiles>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.6</version>
				<executions>
					<!-- remove seleni-server-standalone to use an older version -->
					<execution>
						<id>replace-selenium</id>
						<phase>package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<delete verbose="true">
									<fileset dir="${deploy.path}/main/scripts/selenium/">
										<include name="selenium-server-standalone-*.jar" />
									</fileset>
								</delete>
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>

		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>org.apache.maven.plugins</groupId>
										<artifactId>maven-dependency-plugin</artifactId>
										<versionRange>[0,)</versionRange>
										<goals>
											<goal>copy-dependencies</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore />
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

</project>

 
